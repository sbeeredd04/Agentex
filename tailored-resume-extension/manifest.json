{
    "manifest_version": 3,
    "name": "Resume Tailor",
    "version": "1.0",
    "description": "AI-powered resume tailoring tool",
    "permissions": [
      "activeTab",
      "scripting",
      "sidePanel",
      "storage",
      "contextMenus"
    ],
    "host_permissions": [
      "http://localhost:3000/*"
    ],
    "action": {
      "default_title": "Resume Tailor",
      "default_icon": {
        "16": "icons/icon16.png"
      }
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        },
        "description": "Open Resume Tailor"
      }
    },
    "side_panel": {
      "default_path": "sidepanel.html",
      "default_title": "Resume Tailor",
      "enabled": true
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [{
      "resources": [
        "config.js",
        "storage.js",
        "services/file-manager.js",
        "services/ai-service.js"
      ],
      "matches": ["<all_urls>"]
    }]
}
  