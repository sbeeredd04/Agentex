{
    "manifest_version": 3,
    "name": "Agentex Resume Editor",
    "version": "1.0",
    "description": "AI-powered resume editor to tailor your resume to a specific job description and generate instant resume PDF",
    "permissions": [
      "activeTab",
      "scripting",
      "sidePanel",
      "storage",
      "contextMenus"
    ],
    "host_permissions": [
      "http://localhost:3000/*",
      "https://agentex.vercel.app/*"
    ],
    "action": {
      "default_title": "Agentex",
      "default_icon": {
        "16": "icons/icon16.jpeg"
      }
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        },
        "description": "Open Agentex"
      }
    },
    "side_panel": {
      "default_path": "sidepanel.html",
      "default_title": "Agentex",
      "enabled": true
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.jpeg",
      "48": "icons/icon48.jpeg"
    },
    "web_accessible_resources": [{
      "resources": [
        "config.js",
        "services/ai-service.js",
        "server/serverManager.js"
      ],
      "matches": ["<all_urls>"]
    }],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
  